# Budowanie aplikacji
FROM gradle:8.4-jdk21 AS builder
WORKDIR /app
COPY . .
RUN gradle clean build --no-daemon

# Obraz uruchomieniowy
FROM openjdk:21-jdk-slim
WORKDIR /app
COPY --from=builder /app/build/libs/*.jar app.jar

EXPOSE 8080

# Uruchom aplikacjÄ™
ENTRYPOINT ["java", "-jar", "app.jar"]
